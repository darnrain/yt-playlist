echo "Prev song yes."
}

not_a_playlist_id="7807897890789078907807 Not a channel/playlist/album.
"

	if [[ "$external_arguments" = "--import" ]]
	then
	if [[ "$external_file" = *subscriptions.csv ]]
        then
        unset import_take_out
        import_take_out=$(cat $external_file | sed '/^$/d' | sed '1d' | sed 's/,/ /' | sed 's/,/ /' | awk '{print $1,"Channel:",$3,$4,$5,$6,$7,$8,$9}')
        import_take_out_number=$(echo "$import_take_out" | wc -l)
        echo "$import_take_out" >> ${yt_playlist_home_dir}/yt-playlist_favorites.txt
        sed -i '/^$/d' ${yt_playlist_home_dir}/yt-playlist_favorites.txt
        echo "A total of "$import_take_out_number" channels were imported to favorites"
        exit
        else
	if [[ "$external_file" = *music-library-songs.csv ]]
        then
        unset import_take_out
        import_take_out=$(cat $external_file | sed '/^$/d' | sed '1d' | sed 's/,/ /' | sed 's/music.//' | awk '{print $1,"YTMusic:",$3,$4,$5,$6,$7,$8,$9}')
        import_take_out_number=$(echo "$import_take_out" | wc -l)
        echo "$import_take_out" >> "${yt_playlist_home_dir}/yt-playlist_music.txt"
        sed -i '/^$/d' "${yt_playlist_home_dir}/yt-playlist_music.txt"
        echo "A total of "$import_take_out_number" songs were imported to the music menu."
        exit
        else
        echo "Import Google takeout." 
        echo 'You can import "subscriptions.csv" and "music-library-songs.csv".'
        echo 'Example: "yt-playlist --import subscriptions.csv"'
        exit
    fi
  fi
fi

	if [[ "$external_arguments" = "-h" ]]
	then
        help_function
        exit
        fi

	if [[ "$external_arguments" = "--help" ]]
	then
        help_function
        exit
        fi

	if [[ "$external_arguments" = "--version" ]]
	then
        echo "$version"
	exit
	fi

	if [[ "$external_arguments" = "-v" ]]
	then
        echo "$version"
	exit
	fi

        if [[ "$external_arguments" = "--date_time" ]]
	then
        show_date_time_function
	exit
        fi

        if [[ "$external_arguments" = "--favorites" ]]
	then
        favorites_function
	exit
        fi

        if [[ "$external_arguments" = "--bookmark" ]]
	then
        bookmark_function
	exit
        fi

        if [[ "$external_arguments" = "--sleep_time" ]]
	then
	show_count_down_time_function
	exit
        fi

        if [[ "$external_arguments" = "--download_audio" ]]
	then
	download_audio_function
        exit
        fi

        if [[ "$external_arguments" = "--download_video" ]]
	then
	download_video_function
        exit
        fi

	if command -v jemalloc-config >/dev/null
	then
        jemalloc="yes"
	export LD_PRELOAD=`jemalloc-config --libdir`/libjemalloc.so.`jemalloc-config --revision`
        else
        unset jemalloc
	fi


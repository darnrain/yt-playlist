mpv_video_arguments_function
}

function mpv_video_mp4_function ()
{
mpv_audio_video=( "--ytdl-format=22/18/b --video-sync=display-resample --demuxer-max-bytes=50M --demuxer-max-back-bytes=20M" )
mpv_video_mp4="yes"
unset mpv_video_m4a
unset mpv_video_opus
export audio_download_format="140/ba"
export video_download_format="22/18/b"
mpv_video_arguments_function
}

function mpv_video_m4a_function ()
{
mpv_audio_video=( "--ytdl-format=22/18/b --video=no --demuxer-max-bytes=10M --demuxer-max-back-bytes=5M --term-osd-bar" )
unset mpv_video_mp4
mpv_video_m4a="yes"
unset mpv_video_opus
export audio_download_format="140/ba"
export video_download_format="22/18/b"
mpv_video_arguments_function
}

function mpv_video_opus_function ()
{
mpv_audio_video=( "--ytdl-format=251/140/ba --video=no --demuxer-max-bytes=10M --demuxer-max-back-bytes=5M --term-osd-bar" )
unset mpv_video_mp4
unset mpv_video_m4a
mpv_video_opus="yes"
export audio_download_format="251/ba"
export video_download_format="22/18/b"
mpv_video_arguments_function
}


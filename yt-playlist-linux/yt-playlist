}

function resume_playback_on_function ()
{
resume_playback_arguments=( "--resume-playback=yes --watch-later-options=start --save-position-on-quit=yes" )
resume_playback_on_or_off="yes"
}

function resume_playback_off_function ()
{
resume_playback_arguments=( "--resume-playback=no --watch-later-options=start --save-position-on-quit=yes" )
unset resume_playback_on_or_off
}

